/* pages/myMsgs/myMsgs.wxss */
.container{
    background:#F3F3F3;
    width:750rpx;
    height:100%;
    box-sizing:border-box;
    position:relative;
}
.msg-detail{
    display:block;
    background:#fff;
}
.msg-detail-tip{
    font-size:28rpx;
    color:#FD675E;
    line-height:72rpx;
    padding-left:30rpx;
    background: #FFF8F7;
    position:relative;
}
.msg-detail-tip:before{
    content:'';
    display:inline-block;
    width:30rpx;
    height:30rpx;
    background:url(data:image/png;base64,) no-repeat;
    background-size:100% 100%;
    margin:0 12rpx -3rpx 0;
}
.msg-detail-con{
    padding:0 30rpx 48rpx;
}
.msg-detail-con .answer{
    font-size:32rpx;
    color:#333;
    line-height:70rpx;
    border-bottom:1rpx solid #F3F3F3;
}
.msg-detail-con .reason{
    font-size:28rpx;
    color:#666;
    line-height:40rpx;
    margin-top:30rpx;
}