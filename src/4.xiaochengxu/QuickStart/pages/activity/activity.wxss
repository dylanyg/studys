/* pages/activity/activity.wxss */

/* 通用布局 */

.row {
  display: flex;
  flex-flow: row nowrap;
}

.column {
  display: flex;
  flex-flow: column;
}

/* 背景头图 */

.mod-activity {
  width:100%;
  height: 2790rpx;
  padding-top:640rpx;
  padding-left:105rpx;
  background: url('https://static.58.com/lbg/mengchong/image/element/mengchong-activity-join.png') no-repeat center #ffd085;
  background-size: 100% 2790rpx;
  background-position: 0 0;
  position:relative;
}
.rightnow-share{
  background: url('https://static.58.com/lbg/mengchong/image/element/mengchong-activity-share.png') no-repeat center #ffd085;
  background-size: 100% 2790rpx;
  background-position: 0 0;
}

.mod-join-us {
  margin: 0 auto;
  width: 446rpx;
  line-height: 124rpx;
  height: 124rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  left:50%;
  transform: translate(-50%,-50%);
  bottom:80rpx;
  background:url('https://static.58.com/lbg/mengchong/image/element/activity-button.png') no-repeat top;
  background-size:446rpx 124rpx;
}

.mod-activity-open{
  box-sizing: border-box;
  padding-right:160rpx;
  line-height: 46rpx;
  color: #fff;
  position:relative;
}
button{
  text-align: left;
  padding-left:0;
  background:none;
}
mod-activity-open::hover{
  display: none;
}
.activeTitle{
  line-height: 66rpx;
  font-size:32rpx;
  font-weight:bold;
}
.activeCountDown{
  font-size:32rpx;
  font-weight:bold;
}
.time{
  padding:0 2rpx;
}
.activityEnd{
  text-align: center;
}
