/* pages/myMsgs/myMsgs.wxss */
.container{
    background:#F3F3F3;
    width:750rpx;
    height:100%;
    box-sizing:border-box;
    position:relative;
}
.myMsg-list{
    display:block;
    background:#fff;
}
.myMsg-li{
    padding:30rpx;
    border:1rpx solid #F3F3F3;
    position:relative
}
.myMsg-li-notice{
    color:#999;
    line-height:40rpx;
}
.myMsg-li-notice .inform{
    font-size:28rpx;
}
.myMsg-li-notice .time{
    font-size:24rpx;
    margin-left:30rpx;
}
.myMsg-li-title{
    font-size:32rpx;
    color:#333;
    margin-top:20rpx;
}
.myMsg-li:after{
    content:'';
    display:block;
    width:15rpx;
    height:26rpx;
    background:url(data:image/png;base64,) no-repeat;
    background-size:100% 100%;
    position:absolute;
    right:30rpx;
    top:72rpx;
}
.noMsg{
    font-size:28rpx;
    color:#999;
    text-align: center;
    padding:30rpx;
    line-height:30rpx;
}
.noMsg-img{
    width: 338rpx;
    height: 282rpx;
    margin-top: 250rpx;
}
.noMsg-txt{
    font-size: 28rpx;
    color: #BDBDBD;
    margin-top: 58rpx;
}