/* pages/report/report.wxss */

.mod-report {
  width: 100%;
  background: #f6f6f6;
}

.mod-edit-wrap {
  padding: 20rpx 30rpx;
  background: #fff;
}

.content-wrap {
  border-bottom: 1rpx solid #f3f3f3;
}
/* 联系方式 */
.mod-edit-mobile{
  width:100%;
  height: 88rpx;
  border-top:1rpx solid #f3f3f3;
  padding:0 30rpx;
  background-color:#fff;
  line-height: 88rpx;
  font-size: 34rpx;
  color: #333333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mobile-label{
  width:220rpx;
}
.mobile-entry{
  text-align: right;
  font-size:28rpx;
}

/* 文本编辑区 */

.content-title {
  line-height: 48rpx;
  font-size: 34rpx;
  color: #333;
}

.content-tags {
  margin-top: 24rpx;
  margin-bottom: -20rpx;
}

.content-tag {
  display: inline-flex;
  margin-bottom: 20rpx;
  margin-right: 22rpx;
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 22rpx;
  box-sizing: border-box;
  border: 1rpx solid #999;
  border-radius: 100rpx;
  font-size: 24rpx;
  color: #666;
}

.content-tag-focus {
  border: 1rpx solid #ff552e;
  color: #ff552e;
}

.content-text-warp {
  margin-top: 24rpx;
  height: 198rpx;
}

.content-text-area {
  height: 164rpx;
  width: 100%;
  line-height: 48rpx;
  font-size: 28rpx;
  color: #333;
}

.text-counter {
  text-align: right;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #999;
}

.contect-text-placeholder {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #ccc;
}
.mobile-entry-placeholder{
  line-height: 48rpx;
  font-size: 28rpx;
  color: #CCCCCC;
}

.upload-wrap {
  padding-bottom: 40rpx;
}

.upload-title {
  line-height: 48rpx;
  font-size: 34rpx;
  color: #333;
}

.upload-img-wrap {
  margin-top: 30rpx;
  margin-left: -14rpx;
  margin-bottom: -10rpx;
  display: flex;
  flex-wrap: wrap;
}

.upload-img {
  margin-left: 14rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  flex: 0 1 162rpx;
  height: 162rpx;
}

.upload-img-cancel::after{
  content: '';
  width:22rpx;
  height: 22rpx;
  display:inline-flex;
  position:relative;
  left:130rpx;
  bottom:160rpx;
  background: url('data:image/png;base64,') no-repeat top;
  background-size:100%;
}

.upload-img-add {
  background: url('data:image/png;base64,') no-repeat center;
  background-size: 54rpx 54rpx;
  background-color: #fff8f7;
}

.upload-img-add::after {
  display: none;
}

.mod-report-submit {
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  background: #fff;
  line-height: 50rpx;
  font-size: 36rpx;
  color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mod-report-success {
  background: #f6f6f6;
}

.mod-success-inner {
  width: 100%;
  padding: 74rpx 30rpx 56rpx;
  background: #fff;
  text-align: center;
}

.success-icon {
  width: 143rpx;
  height: 142rpx;
}

.success-intro {
  margin-top: 32rpx;
  line-height: 48px;
  font-size: 34rpx;
  color: #333;
}

.success-desc {
  margin-top: 44rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #999;
}
.back-home{
  padding:26rpx 0;
  line-height: 50rpx;
  font-size: 36rpx;
  color: #000000;
  background: #FFFFFF;
  text-align: center;
  margin-top:20rpx;
}
