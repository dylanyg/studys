/* pages/ranking/ranking.wxss */
.body{
    background:#FFD591;
}
.container{
    width:750rpx;
    height:100%;
    box-sizing:border-box;
    position:relative;
}
.ranking{
    text-align:center;
    padding:20rpx;
    -webkit-border-radius:20rpx;
    border-radius:20rpx;
    margin:0 30rpx 30rpx;
    background:#FFF;
}
.ranking-bannerT,
.ranking-bannerB{
    display:block;
    width:750rpx;
}
.ranking-mypet{
    margin-top:-260rpx;
}
.ranking-mypet-avatar{
    height:120rpx;
    width:120rpx;
    -webkit-border-radius:100%;
    border-radius:100%;
    border:1rpx solid #E8BC7F;
}
.ranking-mypet-name{
    font-size:34rpx;
    color:#333;
    line-height:48rpx;
    margin:10rpx 0 36rpx;
    display:block;
}
.ranking-mypet-reveal{
    display:-webkit-flex;
    display:flex;
}
.ranking-mypet-reveal-detail{
    flex:1;
    border-right:1rpx solid #F3F3F3;
    color:#666;
}
.ranking-mypet-reveal-detail.myVote{
    border-right:none;
}
.reveal-detail-first{
    font-size:34rpx;
    line-height:48rpx;
    margin-bottom:5rpx;
}
.reveal-detail-last{
    font-size:26rpx;
    line-height:37rpx;
}
.ranking-mypet-attend{
    font-size:34rpx;
    color:#fff;
    width:400rpx;
    line-height:88rpx;
    background:#FF552E;
    -webkit-border-radius:50rpx;
    border-radius:50rpx;
    margin:30rpx auto 0;
}
.ranking-mypet-nonepic{
    display:block;
    width:60rpx;
    height:60rpx;
    margin:120rpx auto 30rpx;
}
.ranking-mypet-nonetext{
    font-size:28rpx;
    color:#ccc;
}
.ranking-mypet-top{
    margin-top:130rpx;
}
.ranking-list{
    position:relative;
    overflow:hidden;
}
.ranking-list-title{
    font-size:34rpx;
    color:#666;
    line-height:48rpx;
    position:relative;
}
.ranking-list-title:before,
.ranking-list-title:after{
    display:inline-block;
    content:'';
    height:2px;
    width:140rpx;
    background:#F3F3F3;
    position:absolute;
    top:23rpx;
}
.ranking-list-title:before{
    right:50%;
    margin-right:120rpx;
}
.ranking-list-title:after{
    left:50%;
    margin-left:120rpx;
}
.ranking-list-ahead{
    display: -webkit-flex; 
    display: flex;
    margin:48rpx 0 35rpx;
}
.ranking-list-pet{
    -webkit-flex:1;
    flex:1;
    height:100rpx;
    position:relative;
}
.ranking-list-pet-image{
    display:line-block;
    width:100rpx;
    height:100rpx;
    -webkit-border-radius:100%;
    border-radius:100%;
}
.ranking-list-pet:after{
    font-size:24rpx;
    color:#fff;
    display:block;
    width:100rpx;
    height:25rpx;
    line-height:25rpx;
    -webkit-border-radius:4rpx;
    border-radius:4rpx;
    text-align:center;
    position:absolute;
    bottom:-13rpx;
    left:50%;
    margin-left:-50rpx;
}
.pet-image1{
    border:2rpx solid #FE5F3A;
}
.num1:after{
    content:'No.1';
    background:#FE5F3A;
}
.pet-image2{
    border:2rpx solid #FFA216;
}
.num2:after{
    content:'No.2';
    background:#FFA216;
}
.pet-image3{
    border:2rpx solid #F3CC18;
}
.num3:after{
    content:'No.3';
    background:#F3CC18;
}
.pet-image4{
    border:2rpx solid #B9B9B9;
}
.num4:after{
    content:'No.4';
    background:#B9B9B9;
}
.ranking-list-more{
    width:100rpx;
    height:100rpx;
    line-height:100rpx;
    right:36rpx;
    bottom:55rpx;
    -webkit-border-radius:100%;
    border-radius:100%;
    position:absolute;
    z-index:9;
    background:rgba(0,0,0,0.40);
}
.ranking-list-more-txt{
    font-size:26rpx;
    color:#fff;
}
.ranking-list-more-txt:after{
    content:'';
    display:inline-block;
    width:12rpx;
    height:20rpx;
    margin:0 0 -1rpx 5rpx;
    background:url(data:image/png;base64,) no-repeat;
    background-size:100% 100%;
}
